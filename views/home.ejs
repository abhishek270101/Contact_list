<html>
  <head>
    <title><%= locals.title %></title>
    <link
      rel="stylesheet"
      href="https://kit.fontawesome.com/0eeecd4e25.css"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <h1 id="page-header">
      <i class="fa-solid fa-book"></i>
      <%= locals.title %>
    </h1>
    <ul>
      <% for(let i of contact_list ){ %>
      <li class="contact">
        <div class="name"><%= i.name %></div>
        <div><%= i.phone %></div>

        <button class="delete-button">
          <a href="/delete-contact/?id=<%=i._id %>">Delete</a>
        </button>
      </li>
      <%}%>
    </ul>
    <div class="create-contact">
      <form action="/create-contact" method="post">
        <input type="text" name="name" placeholder="Enter Name" required />
        <input type="number" name="phone" placeholder="Enter Phone" required />
        <button type="submit">Add Contact</button>
      </form>
    </div>
    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>
